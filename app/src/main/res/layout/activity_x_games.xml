<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Voltar"
        android:layout_gravity="left"
        android:backgroundTint="#9C27B0" />

    <TextView
        android:id="@+id/txtXGamesPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X-Games"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgXGames"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/xgames" />

    <TextView
        android:id="@+id/txtXGamesDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="20dp"
        android:text="A XGames é conhecida por seus produtos de alta qualidade e preços competitivos, oferecendo uma grande variedade de jogos e acessórios para gamers de todos os tipos."
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnXGamesMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C27B0"
        android:text="Ver no Mapa" />

    <Button
        android:id="@+id/btnXGamesSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C27B0"
        android:text="Abrir Site" />

    <Button
        android:id="@+id/btnXGamesCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C27B0"
        android:text="Ligar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgXGames1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/xgames1" />

        <ImageView
            android:id="@+id/imgXGames2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/xgames2" />
    </LinearLayout>
</LinearLayout>
